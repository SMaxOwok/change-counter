<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:textAlignment="center">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:layout_marginBottom="29dp"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/button1"
        android:layout_toLeftOf="@+id/quarters"
        android:layout_toStartOf="@+id/quarters"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />
    <ImageButton
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_menu"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/twenties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$20"
        android:layout_alignTop="@+id/textViewBills"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="2dp"
        android:textSize="26sp" />
    <TextView
        android:id="@+id/tens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$10"
        android:layout_below="@+id/twenties"
        android:layout_alignLeft="@+id/twenties"
        android:layout_alignStart="@+id/twenties"
        android:layout_marginBottom="2dp"
        android:textSize="26sp" />
    <TextView
        android:id="@+id/fives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$5"
        android:layout_below="@+id/tens"
        android:layout_alignLeft="@+id/twenties"
        android:layout_alignStart="@+id/twenties"
        android:layout_marginBottom="2dp"
        android:textSize="26sp" />
    <TextView
        android:id="@+id/ones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$1"
        android:layout_below="@+id/fives"
        android:layout_alignLeft="@+id/twenties"
        android:layout_alignStart="@+id/twenties"
        android:layout_marginBottom="2dp"
        android:textSize="26sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewQuarter"
            android:src="@mipmap/quarter"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="70dp"
            android:paddingStart="8dp" />

        <TextView
            android:id="@+id/quarters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="26sp"
            android:layout_below="@+id/imageViewQuarter"
            android:layout_alignStart="@id/imageViewQuarter"
            android:paddingStart="42dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewDime"
            android:src="@mipmap/dime"
            android:layout_alignBottom="@+id/imageViewQuarter"
            android:layout_toEndOf="@+id/imageViewQuarter"
            android:paddingStart="13dp" />

        <TextView
            android:id="@+id/dimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="26sp"
            android:layout_below="@+id/imageViewDime"
            android:layout_alignStart="@id/imageViewDime"
            android:paddingStart="30dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewNickle"
            android:src="@mipmap/nickle"
            android:layout_alignBottom="@+id/imageViewQuarter"
            android:layout_toEndOf="@+id/imageViewDime"
            android:paddingStart="12dp" />

        <TextView
            android:id="@+id/nickles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="26sp"
            android:layout_below="@+id/imageViewNickle"
            android:layout_alignStart="@id/imageViewNickle"
            android:paddingStart="37dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewPenny"
            android:src="@mipmap/penny"
            android:layout_alignBottom="@+id/imageViewQuarter"
            android:layout_toEndOf="@+id/imageViewNickle"
            android:paddingStart="13dp" />

        <TextView
            android:id="@+id/pennies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="26sp"
            android:layout_below="@+id/imageViewPenny"
            android:layout_alignStart="@id/imageViewPenny"
            android:paddingStart="33dp" />
    </RelativeLayout>

</RelativeLayout>
